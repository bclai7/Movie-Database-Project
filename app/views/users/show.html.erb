<div class="pageContainer">
  <div class="userInfo">
    <h2>User Info</h2>

    <p><b>Name: </b><%= @user.name %></p>
    <p><b>Email: </b><%= @user.email %></p>
  </div>

  <% if is_admin? %>
  <div class="adminPanel">
    <h2>Admin Panel</h2>
    <p>You possess admin priveleges</p>
    <h5>Add Movie</h5>
    <%= link_to "Add a new Movie to the Database", '/movies/new', class: "pageLink"%>
  </div>

  <% end %>
</div>
